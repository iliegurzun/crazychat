{% extends 'IogAdminBundle::layout.html.twig' %}

{% block content %}
{% include "IogAdminBundle:Component:search_bar.html.twig" with { object_type: 'user', list:  entities}  %}
<div class="wrapper">
    <div class="panel panel-default panel-block">
        <div class="list-group">
            <div id="input-fields-horizontal" class="list-group-item">
                <h4 class="section-title">Edit user {{ entity }}</h4>
                <form method="post" action="{{ path('user_update', {id: edit_form.vars.value.id}) }}" {{ form_enctype(edit_form) }} class="form-horizontal" role="form" novalidate>
                    {% include 'IogAdminBundle:Component:error_panel.html.twig' with { form: edit_form } %}
                    <div class="form-group">
                        {{ form_label(edit_form.first_name) }}
                        <div class="col-lg-8">
                            {{ form_widget(edit_form.first_name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.last_name) }}
                        <div class="col-lg-8">
                            {{ form_widget(edit_form.last_name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.email) }}
                        <div class="col-lg-8">
                            {{ form_widget(edit_form.email) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.enabled) }}
                        <div class="col-lg-8">
                            {{ form_widget(edit_form.enabled) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.plainPassword.first) }}
                        <div class="col-lg-8">
                            {{ form_widget(edit_form.plainPassword.first) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.plainPassword.second) }}
                        <div class="col-lg-8">
                        {{ form_widget(edit_form.plainPassword.second) }}
                        </div>
                    </div>
                    {#<div class="form-group">
                        {{ form_label(edit_form.image) }}
                        <div class="col-lg-8">
                        {{ form_widget(edit_form.image) }}
                        </div>
                    </div>#}
                    <div class="form-group">
                         {{ form_label(edit_form.image) }}
                        <div class="col-lg-8">
                        {{ form_widget(edit_form.image) }}
                        {% if edit_form.vars.value.profile.image is defined and edit_form.vars.value.profile.image|length and edit_form.vars.value.profile.image.webPath is defined %}
                            <img class="right" src="{{ asset(edit_form.vars.value.profile.image.webPath|apply_filter('user_thumb')) }}" />
                        {% endif %}
                        </div>
                    </div>
                    {{ form_rest(edit_form) }}
                    <div class="form-group">
                        <div class="col-lg-8">
                            <button class="btn btn-success">Edit</button>
                        </div>
                    </div>
                </form>
                <form id="delete-form" method="post" action="{{ path('user_delete', {id: entity.id}) }}" {{ form_enctype(delete_form) }}>
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
