          <textarea id="{{ id }}" name="{{ full_name }}" {% for attrname, attrvalue in attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ value }}</textarea>
      </div>
{% spaceless %}
    
{% endspaceless %}
