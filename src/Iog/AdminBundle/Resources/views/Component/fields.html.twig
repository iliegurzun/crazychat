{% block preview_widget %}
    {% spaceless %}
      <img src="{{ asset(form.vars.value) | apply_filter('admin_thumb') }}" />
    {% endspaceless %}
{% endblock %}
      
{% block text_widget %}
      <div class="col-lg-8">
          <input id="{{ id }}" name="{{ full_name }}" type="text" {% for attrname, attrvalue in attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %} value="{{ value }}" />
      </div>
{% spaceless %}
    
{% endspaceless %}
{% endblock text_widget %}
      
