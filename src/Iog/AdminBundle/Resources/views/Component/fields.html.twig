    <div class="form_row">
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% if form.parent.parent and form.parent.parent.name == 'images' %}
    <a href="#" class="remove-attribute btn btn-danger">Remove</a>
{% endif %}
  {% endspaceless %}
{% else %}
{% if form.parent.parent and form.parent.parent.name == 'images' %}
  <a href="#" class="remove-attribute btn btn-danger">Remove</a>
{% endif %}
