{% for flashMessage in app.session.flashbag.get('alert') %}
    <script type="text/javascript">
        $.growl({
            message: "{{ flashMessage|raw }}"
        }, {
            placement: {
                from: "top",
                align: "center"
            },
            offset: 20,
            mouse_over: "pause",
            animate: {
                enter: 'animated fadeInDown',
                exit: 'animated fadeOutUp'
            },
            type: 'warning',
            delay: 10000,
            icon_type: "img"
        });
    </script>
{% endfor %}

