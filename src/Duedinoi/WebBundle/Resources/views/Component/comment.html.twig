<div class="single-comment col-lg-12 no-padding">
    <div class="col-lg-1">
        <img src="{{ get_user_image(comment.author)|apply_filter('comment_picture') }}" class="comment-picture"/>
    </div>
    <div class="col-lg-11">
        <div class="col-lg-1 orange-text">
            {{ comment.author.username }}
        </div>
        <div class="col-lg-2 gray-text">
            {{ comment.createdAt|date('M d, Y H:i') }}
        </div>
        <div class="col-lg-12 mt-20 mb-30 comment-text">
            {{ comment|nl2br }}
        </div>
    </div>
</div>