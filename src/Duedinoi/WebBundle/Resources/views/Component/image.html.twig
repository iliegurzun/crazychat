<div class="col-md-3 mb-30 single-image">
    <img class="user-photo" src="{{ asset(image.webPath|apply_filter('user_photo')) }}"/>
    <a href="{{ path('duedinoi_profile_picture', {id: image.id}) }}" class="profile-picture {{ image.isProfilePicture ? 'active' : ''}}">
        {{ 'photo.profile'|trans }}
    </a>
    <a href="{{ path('duedinoi_remove_photo', {id: image.id}) }}" class="remove-photo icon icon-remove-sign confirm-action" data-confirm-message="{{'confirm.delete_image'|trans }}"></a>
</div>