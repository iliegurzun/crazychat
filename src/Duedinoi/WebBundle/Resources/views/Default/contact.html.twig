{% extends "DuedinoiWebBundle::layout.html.twig" %}

{% block content %}
    {% include 'DuedinoiWebBundle:Component:header.html.twig' %}
    <div class="container-fluid no-padding">
        <div class="page-heading">
            <h1>{{ 'contact.title'|trans }}</h1>
            <span>{{ 'contact.description'|trans }}</span>
        </div>
        <div class="container no-margin-top special">
            <form method="post" action="{{ path('duedinoi_contact') }}" class="contact-form">
                <div class="col-lg-12 no-padding">
                    <div class="col-lg-6">
                        <div class="form-row">
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-row">
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 no-padding">
                    <div class="col-lg-6">
                        <div class="form-row">
                            {{ form_widget(form.subject) }}
                            {{ form_errors(form.subject) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 no-padding-right">
                    <div class="form-row">
                        {{ form_widget(form.message) }}
                        {{ form_errors(form.message) }}
                    </div>
                </div>
                <div class="col-lg-12">
                    {{ form_rest(form) }}
                    <button class="button green-button custom-padding">{{ 'contact.submit'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}