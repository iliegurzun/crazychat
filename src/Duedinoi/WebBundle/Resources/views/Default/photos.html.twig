{% extends "DuedinoiWebBundle::layout.html.twig" %}

{% block content %}
    {% include 'DuedinoiWebBundle:Component:header.html.twig' %}
    {% include "DuedinoiWebBundle:Component:top_menu.html.twig" %}
    <div class="container-fluid egg-green">
        <div class="container">
            <h3 class="col-lg-12"> {{ 'photos.title'|trans }}</h3>
            {% if user.photos|length %}
                <div class="col-lg-12 no-padding">
                {% for image in user.photos%}
                    {% include "DuedinoiWebBundle:Component:image.html.twig" %}
                {% endfor %}
                </div>
            {% endif %}
            <div class="col-lg-3">
                <form method="post" class="upload-photos-form" action="{{ path('duedinoi_photos') }}" {{ form_enctype(form) }}>
                    {{ form_widget(form) }}
                    <button class="btn green custom"> {{ 'photos.add'|trans }}</button> 
                </form>
            </div>
        </div>
    </div>
{% endblock %}