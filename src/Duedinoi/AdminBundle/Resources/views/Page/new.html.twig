{% extends 'DuedinoiAdminBundle::layout.html.twig' %}

{% form_theme form 'DuedinoiAdminBundle:Component:fields.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter="?yui_js"
            "@DuedinoiAdminBundle/Resources/public/js/collection.js"
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script type="text/javascript" src="//tinymce.cachefly.net/4.0/tinymce.min.js"></script>

{% endblock javascripts %}

{% block content %}
<div class="wrapper">
    <div class="panel panel-default panel-block">
        <div class="list-group">
            <div id="input-fields-horizontal" class="list-group-item">
                <h4 class="section-title">Create new page</h4>
                <form method="post" action="{{ path('page_create') }}" {{ form_enctype(form) }} class="form-horizontal" role="form" novalidate>
                    {% include 'DuedinoiAdminBundle:Component:error_panel.html.twig' with { form: form } %}
                    <div class="form-group">
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.path) }}
                        {{ form_widget(form.path) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.seoTitle) }}
                        {{ form_widget(form.seoTitle) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.seo_description) }}
                        {{ form_widget(form.seo_description) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.seo_keywords) }}
                        {{ form_widget(form.seo_keywords) }}
                    </div>
                    {{ form_rest(form) }}
                    <div class="form-group">
                        <div class="col-lg-8">
                            <button class="btn btn-success">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
