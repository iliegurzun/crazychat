<div id="edit-menu-item" save-url="{{ url|default() }}" aria-hidden="true" class="modal fade" aria-labelledby="myModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            {% if title is defined %}
                <div class="modal-header">
                    <div class="alert alert-info alert-block">
                        <i class="icon-alert icon-alert-info"></i>
                        <strong>{{ title }}</strong>
                        <button aria-hidden="true" data-dismiss="modal" class="close" type="button">Ã—</button>
                    </div>
                </div>
            {% endif %}
            <div class="modal-body">
                <div class="list-group">
                    <form class="form-horizontal" id="update-menu-item" method="post" action="{{ path('menu_submit_edit_modal', {menuitem_id: form.vars.value.id}) }}" {{ form_enctype(form) }} novalidate>
                        <div class="form-group">
                            {{ form_label(form.page) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.page) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-8 or">
                                <h3> OR</h3>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.link) }}
                                <div class="col-lg-8">
                                    {{ form_widget(form.link) }}
                                </div>
                            </div>

                            {{ form_rest(form) }}

                            <div class="form-group">
                                <div class="col-lg-8">
                                    <button class="btn btn-success">Save</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>