{% extends 'DuedinoiAdminBundle::layout.html.twig' %}

{% block content %}
<div class="wrapper">
    <div class="panel panel-default panel-block">
        <div class="list-group">
            <div id="input-fields-horizontal" class="list-group-item">
                <h4 class="section-title">Create new Recruited Member</h4>
                <form method="post" action="{{ path('recruitedmember_create') }}" {{ form_enctype(form) }} class="form-horizontal" role="form" novalidate>
                    {% include 'DuedinoiAdminBundle:Component:error_panel.html.twig' with { form: form } %}
                    <div class="form-group">
                        {{ form_label(form.username) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.username) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.email) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.referral) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.referral) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.recruiter) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.recruiter) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.converter) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.converter) }}
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    <div class="form-group">
                        <div class="col-lg-8">
                            <button class="btn btn-success">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
