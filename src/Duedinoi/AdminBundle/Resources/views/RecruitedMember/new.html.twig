{% extends 'DuedinoiAdminBundle::layout.html.twig' %}

{% block content %}
<div class="wrapper">
    <div class="panel panel-default panel-block">
        <div class="list-group">
            <div id="input-fields-horizontal" class="list-group-item">
                <h4 class="section-title">Create new Recruited Member</h4>
                <form method="post" action="{{ path('recruitedmember_create') }}" {{ form_enctype(form) }} class="form-horizontal" role="form" novalidate>
                    {#{% include 'DuedinoiAdminBundle:Component:error_panel.html.twig' with { form: form } %}#}
                    <div class="form-group">
                        {{ form_label(form.email) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.recruiter) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.recruiter) }}
                            {{ form_errors(form.recruiter) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.converter) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.converter) }}
                            {{ form_errors(form.converter) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.age) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.age) }}
                            {{ form_errors(form.age) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.location) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.location) }}
                            {{ form_errors(form.location) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.siteName) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.siteName) }}
                            {{ form_errors(form.siteName) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.siteUser) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.siteUser) }}
                            {{ form_errors(form.siteUser) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.comments) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.comments) }}
                        </div>
                    </div>

                    {{ form_rest(form) }}
                    <div class="form-group">
                        <div class="col-lg-8">
                            <button class="btn btn-success">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
