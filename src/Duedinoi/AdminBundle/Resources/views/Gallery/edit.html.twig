{% extends 'DuedinoiAdminBundle::layout.html.twig' %}

{% form_theme edit_form 'DuedinoiAdminBundle:Component:fields.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter="?yui_js"
        "@DuedinoiAdminBundle/Resources/public/js/fileupload/jquery.ui.widget.js"
        "@DuedinoiAdminBundle/Resources/public/js/fileupload/load-image.min.js"
        "@DuedinoiAdminBundle/Resources/public/js/fileupload/canvas-to-blob.min.js"
        "@DuedinoiAdminBundle/Resources/public/js/fileupload/jquery.iframe-transport.js"
        "@DuedinoiAdminBundle/Resources/public/js/fileupload/jquery.fileupload.js"
        "@DuedinoiAdminBundle/Resources/public/js/fileupload/jquery.fileupload-process.js"
        "@DuedinoiAdminBundle/Resources/public/js/fileupload/jquery.fileupload-image.js"
        "@DuedinoiAdminBundle/Resources/public/js/fileupload/jquery.fileupload-validate.js"
        "@DuedinoiAdminBundle/Resources/public/js/gallery.js"
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock javascripts %}

{% block content %}
<div class="wrapper">
    <div class="panel panel-default panel-block">
        <div class="list-group">
            <div id="input-fields-horizontal" class="list-group-item">
                <h4 class="section-title">Edit {{ entity }} gallery</h4>
                <form method="post" action="{{ path('gallery_update', {id: edit_form.vars.value.id}) }}" {{ form_enctype(edit_form) }} class="form-horizontal" role="form" novalidate>
                    {% include 'DuedinoiAdminBundle:Component:error_panel.html.twig' with { form: edit_form } %}
                    <div class="form-group">
                        {{ form_label(edit_form.name) }}
                        {{ form_widget(edit_form.name) }}
                    </div>
                    {{ form_rest(edit_form) }}
                    <div class='form-group image-collection'>
                    {% for image in edit_form.vars.value.galleryImages %}
                        {% include "DuedinoiAdminBundle:Gallery:single_image.html.twig" with {image: image, gallery: edit_form.vars.value} %}
                    {% endfor %}
                    </div>
                    <div class="form-group" id="files"></div>
                    <div class="form-group">
                        <div class="col-lg-4 control-label"></div>
                        <div class="col-lg-8">
                            <label for="fileupload" class="btn btn-info" id="gallery-images-label">Add photo(s)</label>
                            <button class="btn btn-success" id="trigger-upload" data-upload-url="{{ path('duedinoi_gallery_upload_photos', {gallery_id: edit_form.vars.value.id}) }}">Upload photos</button>
                            <input type="file" name="gallery_images" id="fileupload" multiple/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-8">
                            <button class="btn btn-success">Save</button>
                        </div>
                    </div>
                </form>
                <form id="delete-form" method="post" action="{{ path('gallery_delete', {id: entity.id}) }}" {{ form_enctype(delete_form) }}>
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
