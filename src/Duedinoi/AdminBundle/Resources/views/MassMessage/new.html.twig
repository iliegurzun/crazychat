{% extends 'DuedinoiAdminBundle::layout.html.twig' %}

{% form_theme form 'DuedinoiAdminBundle:Component:fields.html.twig' %}

{% block content %}
<div class="wrapper">
    <div class="panel panel-default panel-block">
        <div class="list-group">
            <div id="input-fields-horizontal" class="list-group-item">
                <h4 class="section-title">Send new mass message</h4>
                <form method="post" action="{{ path('massmessage_create') }}" {{ form_enctype(form) }} class="form-horizontal" role="form" novalidate>
                    {% include 'DuedinoiAdminBundle:Component:error_panel.html.twig' with { form: form } %}
                    <div class="form-group">
                        {{ form_label(form.message) }}
                        {{ form_widget(form.message) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.receivers) }}
                        {{ form_widget(form.receivers) }}
                    </div>
                    {{ form_rest(form) }}
                    <div class="form-group">
                        <div class="col-lg-8">
                            <button class="btn btn-success">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
