<form method="post" action="{{ path('user_update', {id: edit_form.vars.value.id}) }}" {{ form_enctype(edit_form) }} class="form-horizontal user-create-form" role="form" novalidate>
    {% include 'DuedinoiAdminBundle:Component:error_panel.html.twig' with { form: edit_form } %}
    <div class="form-group">
        {{ form_label(edit_form.role) }}
        <div class="col-lg-8">
            {{ form_widget(edit_form.role) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(edit_form.username) }}
        <div class="col-lg-8">
            {{ form_widget(edit_form.username) }}
        </div>
    </div>
    {% if edit_form.email is defined %}
        <div class="form-group">
            {{ form_label(edit_form.email) }}
            <div class="col-lg-8">
                {{ form_widget(edit_form.email) }}
            </div>
        </div>
    {% endif %}
    {% if edit_form.membership is defined %}
        <div class="form-group">
            {{ form_label(edit_form.membership) }}
            <div class="col-lg-8">
                {{ form_widget(edit_form.membership) }}
            </div>
        </div>
    {% endif %}
    <div class="form-group">
        {{ form_label(edit_form.enabled) }}
        <div class="col-lg-8">
            {{ form_widget(edit_form.enabled) }}
        </div>
    </div>
    {% if edit_form.dateOfBirth is defined %}
        <div class="form-group">
            {{ form_label(edit_form.dateOfBirth) }}
            <div class="col-lg-8">
                {{ form_widget(edit_form.dateOfBirth) }}
            </div>
        </div>
    {% endif %}
    <div class="form-group">
        {{ form_label(edit_form.gender) }}
        <div class="col-lg-8">
            {{ form_widget(edit_form.gender) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(edit_form.country) }}
        <div class="col-lg-8">
            {{ form_widget(edit_form.country) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(edit_form.city) }}
        <div class="col-lg-8">
            {{ form_widget(edit_form.city) }}
        </div>
    </div>
    {% if edit_form.plainPassword is defined %}
        <div class="form-group">
            {{ form_label(edit_form.plainPassword.first) }}
            <div class="col-lg-8">
                {{ form_widget(edit_form.plainPassword.first) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(edit_form.plainPassword.second) }}
            <div class="col-lg-8">
                {{ form_widget(edit_form.plainPassword.second) }}
            </div>
        </div>
    {% endif %}
    {{ form_rest(edit_form) }}
    <div class="form-group">
        <div class="col-lg-8">
            <button class="btn btn-success">Save</button>
        </div>
    </div>
</form>