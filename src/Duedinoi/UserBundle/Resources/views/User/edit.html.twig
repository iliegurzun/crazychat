{% extends 'DuedinoiAdminBundle::layout.html.twig' %}

{% block content %}
<div class="wrapper">
    {% if app.session.getFlashBag.has('notice') %}
        <div id="Sortable_Responsive_Media_Table" class="row-fluid">
            <div class="span12 span-table-title">
                <div class="alert alert-info alert-block">
                    {% for notice in app.session.getFlashBag.get('notice') %}
                        <i class="icon-alert icon-alert-info"></i>
                        <strong>{{ notice|raw }}</strong>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
    <div class="panel panel-default panel-block">
        <div class="list-group">
            <div id="input-fields-horizontal" class="list-group-item">
                <h4 class="section-title">Edit user {{ entity }}</h4>
                {% include "DuedinoiUserBundle:User:edit_user_form.html.twig" %}
                <form id="delete-form" method="post" action="{{ path('user_delete', {id: entity.id}) }}" {{ form_enctype(delete_form) }}>
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
